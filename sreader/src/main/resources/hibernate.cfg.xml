<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/h2datafiles/sreader</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <mapping class="net.sasasin.sreader.orm.Account" />
        <mapping class="net.sasasin.sreader.orm.ContentHeader" />
        <mapping class="net.sasasin.sreader.orm.Subscriber" />
        <mapping class="net.sasasin.sreader.orm.PublishLog" />
        <mapping class="net.sasasin.sreader.orm.ContentView" />
        <mapping class="net.sasasin.sreader.orm.FeedUrl" />
        <mapping class="net.sasasin.sreader.orm.EftRules" />
        <mapping class="net.sasasin.sreader.orm.LoginRules" />
        <mapping class="net.sasasin.sreader.orm.ContentFullText" />
    </session-factory>
</hibernate-configuration>
